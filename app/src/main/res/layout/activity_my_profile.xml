<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileActivity"
    android:layout_margin="20dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivMyProfileProfilePhoto"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_profile_photo" />

    <!--<ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/ivUpdateProfile"
        android:src=""
        android:layout_gravity="end"-->


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateProfilePictureBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/pink"
            android:fontFamily="@font/aclonica"
            android:text="Edit profile picture"
            android:textColor="#6D4C41"
            android:textSize="16sp"
            android:textStyle="bold" />


    <TextView
        android:id="@+id/tvMyProfileName"
        android:layout_width="390dp"
        android:layout_height="45sp"
        android:fontFamily="@font/acme"
        android:text=" Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="16sp"
        android:background="@drawable/tv_bg_shape"/>


    <TextView
        android:id="@+id/tvMyProfileMobileNo"
        android:layout_width="390dp"
        android:layout_height="45sp"
        android:fontFamily="@font/acme"
        android:text=" MobileNo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="16sp"
        android:background="@drawable/tv_bg_shape"/>

    <TextView
        android:id="@+id/tvMyProfileEmailID"
        android:layout_width="390dp"
        android:layout_height="45sp"
        android:fontFamily="@font/acme"
        android:text="Email ID"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:paddingLeft="16sp"
        android:background="@drawable/tv_bg_shape"/>

        <TextView
            android:id="@+id/tvMyProfileUsername"
            android:layout_width="390dp"
            android:layout_height="45sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tv_bg_shape"
            android:fontFamily="@font/acme"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pink"
        android:text="Update Profile"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        android:layout_margin="16sp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/pink"
        android:text="SignOut"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        android:layout_margin="16sp"
        android:textStyle="bold"/>
    </LinearLayout>

</ScrollView>