        app:lottie_rawRes="@raw/optverify" />-->

     <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/otpverify" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:fontFamily="@font/adamina"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the OTP to"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginTop="4sp"
        android:fontFamily="@font/alegreya"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVerifyOTPMobileno"
        android:text="+91-8698267015"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginTop="4sp"
        android:fontFamily="@font/alegreya"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"
        android:gravity="center">

        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etVerifyOTPInputCode1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etVerifyOTPInputCode2"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etVerifyOTPInputCode3"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etVerifyOTPInputCode4"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etVerifyOTPInputCode5"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/etVerifyOTPInputCode6"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive the OTP?"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginTop="4sp"
            android:fontFamily="@font/adamina"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvVerifyOTPResendOTP"
            android:text="Resend OTP"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="4sp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/adamina"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acbtnVerifyOTPVerify"
        android:text="Verify"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="30dp"
        android:background="@drawable/btn_bg_shape_blue"/>

</LinearLayout>